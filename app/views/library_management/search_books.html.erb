   <div class="search_form">
    <%=form_for :search_book ,url: library_management_search_books_list_result_path, method: :post,remote:true do |form|%>

   <div class="label-field-pair">
      <%=form.label :search_field, "Search"%>
        <div class="text-input-bg">
          <%=form.text_field :search_field,style: "height:30px"%>
        </div>
    </div>


      <div class="label-field-pair" style="float:left" >
     <%=form.label :Filterby ,"Search by" %>
     <div class="text-input-bg" style="float:left" >
     <%= form.select :search_choice , options_for_select([["Book Number","Book Number"],["Barcode","Barcode"],["Title","Title"],["Tag","Tag"],["Author","Author"]]) ,:class => 'genForm_dropBox'%>
     </div>
     </div>

      <%=form.submit "Search",{:class=>"submit_button",style: "margin-left:30px;"}%>
   <%end%>
  </div>
