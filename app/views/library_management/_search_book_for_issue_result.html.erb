<%begin%>
<%@count= @books.count%>
<%if @count>0.to_i%>
<table align="center" class="table table-hover" style="width:800px">
		<thead>
 		<tr>
 			<th>Book Number</th>
 			<th>Barcode</th>
 			<th>Book Title</th>
 			<th>Author</th>
 		</tr>
 	</thead>
				
			<tbody>
<%begin%>
<%@books.each do |book|%>
			<tr>
 			<td><%=book.book_no%></td>
 			<td><%=book.barcode_no%></td>
 			<td><%=link_to book.title,library_management_book_issue_select_student_employee_path(book)%></td>
 			<td><%=book.author%></td>
 		</tr>
 <%end%>
 
<%rescue Exception=>e%>
<%end%>

</tbody>
</table>
<%else%>
<p class="flash-msg" style="margin-left: 160px;"> No books found.Try Again</p>
<%end%>
<%rescue Exception=>e%>
<p class="flash-msg" style="margin-left: 160px;"> No books found.Try Again</p>
 <%end%>