<%if @books.empty? %>
<p class="flash-msg" style="margin-left: 160px;">  Record Not Found.</p>
 <%else%>
<table align="center" class="table table-hover" style="width:800px">
    <thead>
    	<tr>
      		<th> Sr.No</th>
      		<th>Book Number</th>
      		<th>Title</th>
          <th>Author</th>
          
    	</tr>
    </thead>
    <tbody>
  	<% @books.each_with_index do |book,i|%>
  	 <tr>
    	 	<td><%=i+1%></td>
    	 	<td><%=book.book_no %></td>
    	 	<td><%=book.title %></td>
        <td><%=book.author%></td>
  	 </tr>
  	<%end%>
    </tbody>
  	</table>
   

<%end%>
