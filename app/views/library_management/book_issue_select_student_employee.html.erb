
<div id="content-header">
  <h1>Library Management</h1>
  
  </div>
  <div><%= image_tag("underline.jpg",width: "100%")%></div> 


<div id="page-yield">
  <div class="bread_crumb">
    <%=link_to "Home",new_user_session_path%> &raquo;<%=link_to "Library",library_management_library_dashboard_path%> Issue Book
  </div>
<div id="page-yield-bookissue" class="issuebook_book">
   <div class="extender"></div>
   <div >
   <%=form_for :issue_book ,url: library_management_issue_books_path, method: :post do |form|%>
	<%=form.hidden_field :is_student,:value => ""%>
	<%=form.hidden_field :student_employee_id,:value => ""%>
	<%=form.hidden_field :book_no,:value => @book.book_no%>

   </div>
      <div class="label-field-pair">
        <label for="book_number">Book Number </label>
        <div class="text-input-bg">
         <%=form.text_field :book_id ,{class: "form-control",disabled: true,style: "height:30px",value: @book.book_no}%>
        
        </div>
      </div>
      <div class="label-field-pair">
        <label for="book_title">Book Title </label>
        <div>
          <%=text_field_tag  'book_title', @book.title, {style: "height:30px",disabled: true}%>
        </div>
      </div>
      

      <div id="user">
        <div id="book_list">
        	
 <div class="label-field-pair">
          <label for="user_name">Name </label>
          <div >
          <%=text_field_tag  'student_name', '', {class: "form-control",disabled: true,style: "height:30px;padding: 0;width:205px;background: none repeat scroll 0% 0% ",size:"30"}%>
        </div>
        </div>
        <div class="label-field-pair">
          
          <label for="Admission_no.">Admission no.</label>
          <div class="text-input-bg">
          <%=text_field_tag  'student_addmission_no', '', {class: "form-control",disabled: true,style: "height:30px;padding: 0;width:205px;background: none repeat scroll 0% 0% ",size:"30"}%>
          </div>
        </div>

        </div>
        
        <div class="label-field-pair">
          <label for="issue_date">Issue date </label>
          <div class="text-input-bg">
         <%=form.date_field :issue_date ,{value: Date.today.to_s,style: "height:30px",class: "form-control"}%>
          </div>
        </div>
        <div class="label-field-pair">
          <label for="Due Date">Due Date </label>
          <div class="text-input-bg">
           <%=form.date_field :due_date ,{value: (Date.today+30).to_s,style: "height:30px",class: "form-control"}%>
 
          </div>
      </div>
      </div>
     <%=form.submit "Issue",{class: "submit_button",id: "submit_button"}%>
     <%end%>
  </div>
 
  <div id="issuebook_student" class="issuebook_student">
  <div>
 <%=form_for :search,url: library_management_student_employee_list_path,remote: true do |form|%>
<%=form.hidden_field :book_id,:value => @book.id%>
    <label for="user_name">Search by admission no/employee no</label>
	<div>
	<%=form.text_field :id,{class: "form-control",style: "float:left;width: 200px"}%>
	<%=form.radio_button :filter, 'Student',{checked: true,style:"margin-left: 10px;"}%> Student
    <%=form.radio_button :filter,'Employee', checked: false%>Employee
    <%=form.submit "Search",class: "search_button"%>
     </div>
     <%end%>
     </div>
     <br><br>
     <div id="student_employee_list">
     
<div id="user_list">
  
</div>


     </div>
     
     </div>      
   </div>
   </div>
    </div>
    <div class="extender"></div>
  <div id="user_list"></div>
  </div>
 
</div>
</div>



