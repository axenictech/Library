
<div id="content-header">
  <h1>Library Management</h1>
  
  </div>
  <div><%= image_tag("underline.jpg",width: "100%")%></div> 

<div id="page-yield">

<div class="bread_crumb">
   <%=link_to "Home",new_user_session_path%> &raquo;<%=link_to "Library",library_management_library_dashboard_path%> &raquo;Return Books
  </div>
  
  
  <div class="search_form">
     <%=form_for :returnbook,url: library_management_return_books_path  do |form|%>
      
      <div id="book_return" >
        <div class="name">Book Number</div><div class="val themed_text"><span>:</span><%=@book.book.book_no
%></div>
        <div class="name">Book Holder</div><div class="val themed_text"><span>:</span><span class="holder_name themed_text"><%=
        if @book.student.nil?
         @book.employee.first_name+" "+@book.employee.last_name
        else
         @book.student.first_name+" "+@book.student.last_name
     end
        %></span></div>
        <div class="name">Book issue date</div><div class="val themed_text"><span>:</span><%=@book.issue_date%></div>
        <div class="name">Book due date</div><div class="val themed_text"><span>:</span><%=@book.due_date%></div>
        <div class="extender"></div>
        <br/>
      
       <%=form.hidden_field :book_id,:value => @book.id%>
       <%if @book.due_date <=Date.today%>

        <div class="name exceeded"> Due date has been exceeded</div><div class="val themed_text"><span></span></div>
       
 		<div class="name">Enter Fine Amount</div><div class="val themed_text"><span>:</span><%=form.text_field :amount%></div>

       
       <%end%>

       <%=form.submit "Return",{:class=>"submit_button",style: "margin-left:10px;"}%>
       <%end%>
      </div>
    
  </div>
    <div id="book-list">

  </div>
</div>
 </div>

<div class="extender"></div>
  <div id="footer">
      <div id="footer_logo">
        <div id="powered_by">
          Powered by <a href="http://www.axenic.co.in/" target="_blank", class="themed_text">Educulture</a>
        </div>
      </div>
  </div>
