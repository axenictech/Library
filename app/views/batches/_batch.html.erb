<% if @course.batches.empty? %>
<h4 align="center">No Record Found </h4>
<% else %>
<table align="center" class="table table-hover table-bordered" style="width:500px">
<ul id="category-list">
<tbody>
<thead>
	<tr class="tr-head"><th>Batch</th>
		</tr>
</thead>
		
<% @course.batches.each do |batch|%>
	
			<tr>
			<td><%=link_to batch.course.code+" "+batch.course.section_name+" - "+batch.name , batches_display_path(batch) %></td>
			</tr>
<%end%>
</tbody>
</ul>
</table>
<% end %>