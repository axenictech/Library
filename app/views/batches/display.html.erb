<div id="content-header">
  <h1>Courses</h1>
  <h3>Batches</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), :back %>
  </div>
   <div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>
 <div id="inner-tab-menu">
  <ul>
    <li><%= link_to 'Exams',exam_group_path(@batch)%> </li>
    <li><%= link_to 'Edit', edit_batch_path(@batch) %></li>
    <li><%= link_to 'Delete', batches_display_path(@batch),
                    method: :delete, data: { confirm: "Are you sure to delete Batch #{@batch.course.course_name+" "+@batch.course.section_name+" - "+@batch.name }?"} %></li>
    <li style="width:150px"><%= link_to 'Manage Subject',batches_subjects_subject_path(@batch)%></li>
    <li style="width:150px"><%= link_to 'Assign Tutor',batches_assign_tutor_path(@batch)%></li>
  </ul>
</div>

<div id="page-yield">

 <div class="box">
   <div class="bread_crumb">
    <%= link_to 'Courses', courses_path %> &raquo;
    <%= link_to @batch.course.course_name, course_path(@batch.course) %> &raquo;
    Batch <%= @batch.name %>
        </div>
</div>
<% if @students.empty? %>
 <h4 align="center">No Record Found </h4>
   <% else %>
<table align="center" class="table table-hover" style="width:1000px">
  <tr class="tr-head">
    <td class="col-1">Sl.no</td>
    <td class="col-2">Name</td>
    <td class="col-2">Admission Number</td>
    <td class="col-2"></td>
  </tr>
  <% @slno = 0 %>
  <% @students.each do |student| %>
    <% @slno= @slno + 1 %>
    <tr>
      <td class="col-1"><%=  @slno %></td>
      <td class="col-2"><%= student.first_name+" "+student.last_name %></td>
      <td class="col-2"><%= student.admission_no %> </td>
      <td><%= link_to 'View Profile',students_profile_path(student) %></td>
    </tr>
  <% end %>
</table>
<%end%>
</div></div>